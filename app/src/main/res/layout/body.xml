<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:visibility="gone"
    app:cardBackgroundColor="#f5f5f5"
    app:cardCornerRadius="8dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/doaArabic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="Doa Arabic"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/vv"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/doaArabic"
            android:background="#000" />

        <TextView
            android:id="@+id/doaLatin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vv"
            android:layout_margin="5dp"
            android:text="Ini adalah contoh latin"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/doaTranslation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/doaLatin"
            android:layout_margin="5dp"
            android:text="Ini adalah contoh translatoin"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="italic|bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>